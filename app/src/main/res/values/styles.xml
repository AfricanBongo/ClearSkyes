<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="YellowText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/yellow_light</item>
    </style>
    <style name="YellowText.Small">
        <item name="android:textSize">@dimen/small_font_size</item>
    </style>
    <style name="YellowText.Medium">
        <item name="android:textSize">@dimen/medium_font_size</item>
    </style>
    <style name="YellowText.MediumMedium">
        <item name="android:textSize">@dimen/medium_medium_font_size</item>
    </style>
    <style name="PurpleText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/purple_dark</item>
    </style>
    <style name="PurpleText.Small">
        <item name="android:textSize">@dimen/small_font_size</item>
    </style>
    <style name="PurpleText.Medium">
        <item name="android:textSize">@dimen/medium_font_size</item>
    </style>
    <style name="GreyText">
        <item name="android:textColor">@color/grey_like</item>
    </style>
    <style name="GreyText.Small">
        <item name="android:textSize">@dimen/small_font_size</item>
    </style>
    <style name="WhiteText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="WhiteText.Small">
        <item name="android:textSize">@dimen/small_font_size</item>
    </style>
    <style name="WhiteText.Medium">
        <item name="android:textSize">@dimen/medium_font_size</item>
    </style>

    <!-- CustomTextView style-->
    <style name="CustomTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/smallest_gap</item>
    </style>
    <style name="CustomTextView.SmallWhiteText">
        <item name="android:textAppearance">@style/WhiteText.Small</item>
    </style>
    <style name="CustomTextView.MediumWhiteText">
        <item name="android:textAppearance">@style/WhiteText.Medium</item>
    </style>
    <style name="CustomTextView.SmallGreyText">
        <item name="android:textAppearance">@style/GreyText.Small</item>
    </style>
    <style name="CustomTextView.SmallPurpleText">
        <item name="android:textAppearance">@style/PurpleText.Small</item>

    </style>
    <style name="CustomTextView.MediumPurpleText">
        <item name="android:textAppearance">@style/PurpleText.Medium</item>
    </style>

    <style name="CustomTextView.SmallWhiteText.PurpleBackground">
        <item name="android:background">@drawable/purple_curved_background</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:paddingStart">-48dp</item>
        <item name="android:paddingEnd">-8dp</item>
        <item name="queryBackground">@drawable/white_curved_background</item>
        <item name="iconifiedByDefault">false</item>
        <item name="background">@drawable/purple_curved_background</item>
        <item name="elevation">50dp</item>
    </style>
</resources>