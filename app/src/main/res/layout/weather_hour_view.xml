<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        style="@style/CustomTextView.SmallPurpleText"
        android:layout_marginStart="@dimen/small_gap"
        android:layout_marginBottom="@dimen/medium_gap"
        android:textStyle="bold"
        android:text="01:00 - 02:00"/>
    <LinearLayout
        android:layout_marginStart="@dimen/small_gap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/weather_hour_image"
            android:layout_width="@dimen/weather_medium_icon"
            android:layout_height="@dimen/weather_medium_icon"
            android:layout_marginEnd="@dimen/small_gap"
            android:src="@drawable/avd_cloudy_day"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/medium_medium_font_size"
            android:layout_gravity="center_vertical"
            android:text="24*"
            android:textColor="@color/black"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end">

        </LinearLayout>

<!--        TODO Write Up views of feelslikeTemp, description too and precip-->
    </LinearLayout>

</LinearLayout>