<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/small_gap"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/powered"
        android:layout_margin="@dimen/smallest_gap"
        android:layout_gravity="center"
        style="@style/PurpleText.Medium"
        android:textStyle="bold"/>

    <ImageView
        android:layout_gravity="center"
        android:id="@+id/credit_image"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:scaleType="center"
        app:srcCompat="@drawable/weatherapi_logo"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/smaller_gap"
        android:layout_marginBottom="@dimen/smaller_gap"/>
</LinearLayout>